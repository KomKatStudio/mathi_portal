---
import { Picture } from "astro:assets";
import mathiLogo from "@/assets/img_logo_mathi.webp";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={mathiLogo}
      alt="Mathi Logo"
      width={300}
      height={300}
      class="w-full animate-float"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-normal xl:tracking-tighter">
      <span class="block">Your AI Assistant</span>
      <span class="block">in Homework</span>
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Get instant help with your homework using advanced AI technology. Mathi helps you understand complex problems, provides step-by-step explanations, and makes learning more engaging and interactive.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://play.google.com/store/apps/details?id=studio.komkat.mathi"
        target="_blank"
        class="flex gap-1 items-center justify-center bg-black text-white hover:bg-gray-800 rounded-full text-lg px-6 py-3 transition-colors">
        <Icon class="text-white w-5 h-5" name="bx:bxs-download" />
        Download App
      </Link>
      <Link
        size="lg"
        style="outline"
        href="#features"
        class="flex gap-1 items-center justify-center border-2 border-black text-black hover:bg-gray-100 rounded-full text-lg px-6 py-3 transition-colors">
        <Icon class="text-black w-4 h-4" name="bx:bx-book-open" />
        Learn More
      </Link>
    </div>
  </div>
</main>

<style>
  @keyframes float {
    0% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
    100% {
      transform: translateY(0px) rotate(0deg);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
    filter: drop-shadow(0 10px 8px rgb(0 0 0 / 0.04)) drop-shadow(0 4px 3px rgb(0 0 0 / 0.1));
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-float {
      animation: none;
    }
  }
</style>
