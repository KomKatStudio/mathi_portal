---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Math Solutions",
    description:
      "Get step-by-step solutions for any math problem, from basic arithmetic to complex equations.",
    icon: "bx:bxs-calculator",
  },
  {
    title: "Translate & More",
    description:
      "Translate text into multiple languages and access many more helpful features.",
    icon: "bx:bxs-book-content",
  },
  {
    title: "Camera Integration",
    description:
      "Simply take a photo of your homework problem and let Mathi analyze and help you solve it with detailed explanations.",
    icon: "bx:bxs-camera",
  },
  {
    title: "Interactive Learning",
    description:
      "Learn through engaging interactions with AI that adapts to your learning style and pace.",
    icon: "bx:bxs-brain",
  },
  {
    title: "Multi-Language Support",
    description:
      "Access learning materials and solutions in multiple languages to better understand concepts in your preferred language.",
    icon: "bx:bxs-message-rounded-dots",
  },
  {
    title: "Step-by-Step Guidance",
    description:
      "Follow clear, detailed explanations that break down complex problems into easy-to-understand steps.",
    icon: "bx:bxs-graduation",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    Your Smart Study Companion
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    From math solutions to language translation, Mathi helps you tackle any academic challenge with confidence.
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
