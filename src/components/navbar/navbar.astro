---
import Container from "@/components/container.astro";
import { Picture } from "astro:assets";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import mathiLogo from "@/assets/img_logo_mathi.webp";

const menuitems = [
  {
    title: "Features",
    path: "/features",
  },
  {
    title: "Showcase",
    path: "/showcase",
  },
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row items-center justify-between my-5">
    <div class="flex w-full lg:w-auto items-center justify-between lg:justify-start lg:flex-1">
      <a href="/" class="flex items-center gap-2">
        <Picture
          src={mathiLogo}
          alt="Mathi Logo"
          width={40}
          height={40}
          class="w-10 h-10"
        />
        <span class="font-bold text-xl text-slate-800">Mathi</span>
      </a>
      <div class="block lg:hidden">
        <MenuIcon class="w-4 h-4 text-gray-800" />
      </div>
    </div>
    
    <nav class="hidden w-full lg:w-auto lg:flex lg:flex-1 lg:justify-center">
      <ul class="flex flex-col lg:flex-row items-center gap-8">
        {
          menuitems.map((item) => (
            <li>
              <a
                href={item.path}
                class="flex px-3 py-2 text-gray-600 hover:text-gray-900">
                <span>{item.title}</span>
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <div class="hidden lg:flex items-center gap-4 lg:flex-1 lg:justify-end">
      <a
        href="https://play.google.com/store/apps/details?id=studio.komkat.mathi_android"
        class="flex items-center gap-2 text-sm px-4 py-2 rounded-full bg-black text-white hover:bg-gray-800 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 512 512">
          <path fill="currentColor" d="M325.3 234.3L104.6 13l280.8 161.2-60.1 60.1zM47 0C34 6.8 25.3 19.2 25.3 35.3v441.3c0 16.1 8.7 28.5 21.7 35.3l256.6-256L47 0zm425.2 225.6l-58.9-34.1-65.7 64.5 65.7 64.5 60.1-34.1c18-14.3 18-46.5-1.2-60.8zM104.6 499l280.8-161.2-60.1-60.1L104.6 499z"/>
        </svg>
        
      </a>
      <button
        disabled
        class="flex items-center gap-2 text-sm px-4 py-2 rounded-full bg-gray-400 text-white cursor-not-allowed">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 384 512">
          <path fill="currentColor" d="M318.7 268.7c-.2-36.7 16.4-64.4 50-84.8-18.8-26.9-47.2-41.7-84.7-44.6-35.5-2.8-74.3 20.7-88.5 20.7-15 0-49.4-19.7-76.4-19.7C63.3 141.2 4 184.8 4 273.5q0 39.3 14.4 81.2c12.8 36.7 59 126.7 107.2 125.2 25.2-.6 43-17.9 75.8-17.9 31.8 0 48.3 17.9 76.4 17.9 48.6-.7 90.4-82.5 102.6-119.3-65.2-30.7-61.7-90-61.7-91.9zm-56.6-164.2c27.3-32.4 24.8-61.9 24-72.5-24.1 1.4-52 16.4-67.9 34.9-17.5 19.8-27.8 44.3-25.6 71.9 26.1 2 49.9-11.4 69.5-34.3z"/>
        </svg>
        
      </button>
    </div>
  </header>
</Container>

<style>
  [astro-icon] {
    width: 1.25rem;
    height: 1.25rem;
  }
</style>
