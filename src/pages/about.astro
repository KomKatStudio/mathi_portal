---
import { Picture } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import komkatLogo from "@/assets/img_komkat.webp";
---

<Layout title="About">
  <Container>
    <Sectionhead>
      <Fragment slot="title">About Us</Fragment>
      <Fragment slot="desc">The Story of KomKat Studio</Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <div class="flex justify-center mb-8">
        <Picture
          src={komkatLogo}
          alt="KomKat Studio Logo"
          sizes="(max-width: 800px) 100vw, 400px"
          width={300}
          height={300}
          class="rounded-lg"
        />
      </div>
      <h2 class="font-bold text-3xl text-gray-800 text-center">
        KomKat Studio
      </h2>
      <div class="text-lg leading-relaxed text-slate-500 text-center max-w-2xl mx-auto">
        <p class="mb-2">The magical stories about our amazing adventures.</p>
        <p>We're passionate about creating innovative solutions that make education more accessible and enjoyable for everyone.</p>
      </div>
    </div>

    <div class="flex justify-center mt-12">
      <a
        href="https://komkatstudio.github.io"
        class="bg-black text-white px-6 py-3 rounded-full hover:bg-gray-800 transition-colors">
        Visit KomKat Studio
      </a>
    </div>
  </Container>
</Layout>
